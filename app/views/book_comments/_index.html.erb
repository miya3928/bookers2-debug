  <table class = 'table-borderless'>
    <tbody>
      <% book.book_comments.each do |book_comment| %>
       <% if book_comment.user %>
       <tr>
         <td>
           <%= link_to(book_comment.user) do %>
            <%= image_tag book_comment.user.get_profile_image(50, 50) %><br>
            <%= book_comment.user.name %>
           <% end %>
          <% end %> 
        </td>
        <td><%= book_comment.comment %></td>
        <td>
          <% if book_comment.user == current_user %>
          <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-sm btn-danger", remote: true %>
         <% end %>
        </td>
       </tr> 
     <% end %>  
  </tbody>
</table>